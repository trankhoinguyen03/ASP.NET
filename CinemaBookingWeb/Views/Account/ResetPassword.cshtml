@model CinemaBookingWeb.Models.ResetPasswordViewModel

@{
    ViewBag.Title = "Đặt Lại Mật Khẩu";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<section class="lg">
    <div class="login-container d-flex">
        <!-- Phần hình ảnh -->
        <div class="login-image col-md-6 d-none d-md-block">
            <img src="~/img/loginimg.png" alt="form">
        </div>

        <!-- Phần form đặt lại mật khẩu -->
        <div class="login-form col-md-6">
            <img src="~/img/logo.png" alt="Logo" class="login-logo">
            <h2 class="form-title">Đặt Lại Mật Khẩu</h2>

            @if (ViewBag.Error != null)
            {
                <p style="color:red">@ViewBag.Error</p>
            }
            @if (TempData["Success"] != null)
            {
                <p style="color:green">@TempData["Success"]</p>
            }

            <form asp-action="ResetPassword" method="post">
                <div class="mb-3">
                    <input type="text" id="userName" name="UserName" value="@Model.UserName" readonly class="login__input" placeholder="Nhập tên người dùng">
                </div>
                <div class="mb-3">
                    <input type="email" id="email" name="Email" value="@Model.Email" readonly class="login__input" placeholder="Nhập email của bạn">
                </div>
                <div class="mb-3">
                    <input type="password" id="newPassword" name="NewPassword" required class="login__input" placeholder="Mật khẩu mới">
                </div>
                <div class="mb-3">
                    <input type="password" id="confirmPassword" name="ConfirmPassword" required class="login__input" placeholder="Xác nhận mật khẩu">
                </div>

                <button type="submit" class="btn btn-primary btn-login">Cập Nhật Mật Khẩu</button>

                <p class="text-center mt-3">
                    <a href="@Url.Action("ForgotPassword", "Account")">Quay lại</a>
                </p>
            </form>
        </div>
    </div>
</section>
