@{
    ViewData["Title"] = "Movies Revenue";
    Layout = "_LayoutAdmin";
}
@model CinemaBookingWeb.Models.OverviewModel
@using System.Text.Json
@{
    var startDate = ViewBag.StartDate as DateTime?;
    var endDate = ViewBag.EndDate as DateTime?;
}

<div>
    <h2>Chọn khoảng thời gian thống kê</h2>
    <form method="get">
        <label for="startDate">Ngày bắt đầu:</label>
        <input type="date" id="startDate" name="startDate" value="@startDate?.ToString("yyyy-MM-dd")" />

        <label for="endDate">Ngày kết thúc:</label>
        <input type="date" id="endDate" name="endDate" value="@endDate?.ToString("yyyy-MM-dd")" />

        <button type="submit">Lọc</button>
    </form>
</div>

<div>
    <h2>Doanh thu theo ngày của từng phim</h2>
    <canvas id="moviesRevenueByDayChart" width="400" height="200"></canvas>

    <h2>Doanh thu theo tháng của từng phim</h2>
    <canvas id="moviesRevenueByMonthChart" width="400" height="200"></canvas>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    var movieDayLabels = @Html.Raw(JsonSerializer.Serialize(Model.MoviesRevenueByDay.Select(x => x.Name)));
    var movieDayData = @Html.Raw(JsonSerializer.Serialize(Model.MoviesRevenueByDay.Select(x => x.Revenue)));

    var ctxMovieDay = document.getElementById('moviesRevenueByDayChart').getContext('2d');
    var moviesRevenueByDayChart = new Chart(ctxMovieDay, {
        type: 'bar',
        data: {
            labels: movieDayLabels,
            datasets: [{
                label: 'Doanh thu',
                data: movieDayData,
                backgroundColor: 'rgba(75, 192, 192, 0.2)',
                borderColor: 'rgba(75, 192, 192, 1)',
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });

    var movieMonthLabels = @Html.Raw(JsonSerializer.Serialize(Model.MoviesRevenueByMonth.Select(x => x.Name)));
    var movieMonthData = @Html.Raw(JsonSerializer.Serialize(Model.MoviesRevenueByMonth.Select(x => x.Revenue)));

    var ctxMovieMonth = document.getElementById('moviesRevenueByMonthChart').getContext('2d');
    var moviesRevenueByMonthChart = new Chart(ctxMovieMonth, {
        type: 'bar',
        data: {
            labels: movieMonthLabels,
            datasets: [{
                label: 'Doanh thu',
                data: movieMonthData,
                backgroundColor: 'rgba(54, 162, 235, 0.2)',
                borderColor: 'rgba(54, 162, 235, 1)',
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });
</script>


