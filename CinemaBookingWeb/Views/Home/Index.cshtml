@{
    ViewData["Title"] = "Home Page";
    Layout = "_LayoutHome";
}

@model List<Movies>


<!-- Slideshow container -->
<div id="carouselExample" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        <!-- Slide 1 -->
        <div class="carousel-item active">
            <div class="d-flex justify-content-center">
                <img src="~/img/venom.jpg" class="d-block w-100" alt="Cinema Interior">
            </div>
        </div>
        <!-- Slide 2 -->
        <div class="carousel-item">
            <img src="~/img/bocchi-the-rock-recap-part-2-1.jpg" class="d-block w-100" alt="Movie Poster">
        </div>
        <!-- Slide 2 -->
        <div class="carousel-item">
            <img src="~/img/thanhduoc.jpg" class="d-block w-100" alt="Movie Poster">
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>
</br>

<style>
    .movie-title-dang-chieu {
        text-align: center !important;
        font-size: 2.5rem !important; /* Kích thước lớn */
        font-weight: bold !important; /* Làm đậm */
        color: var(--primary-color);
        !important; /* Màu sắc */
    }
</style>
<h2 class=" movie-title-dang-chieu text-2xl font-bold mb-4">Phim Đang Chiếu </h2>


<section class="movies">
    <div class="container">
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 justify-center">
            @foreach (var item in Model)
            {
                <a href="@Url.Action("Detail","MoviesDetail", new{ Id = item.MovieId })">
                    <div class="movie-item text-center p-4 border rounded shadow">
                        <img src="~/img/@item.ImageUrl" alt="@item.Title" class="w-full h-auto mb-2">
                        <h3 class="movie-item-title text-lg font-semibold">@item.Title</h3>
                        <p>Thể loại: @item.Genre</p>
                    </div>
                </a>
            }
        </div>
    </div>
</section>