@model IEnumerable<CinemaBookingWeb.Models.Cinemas>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-success">Thêm rạp</a>
</div>




<form method="get" asp-controller="Cinemas" asp-action="Index" class="d-flex mb-3">
    <input type="text" name="searchString" class="form-control me-2 w-auto" placeholder="Tìm kiếm" value="@ViewData["CurrentFilter"]" />
    <button type="submit" class="btn btn-primary w-auto">Tìm kiếm</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            @* <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td> *@
                <td>
                    @if (item.Status == 1)
                    {
                        <span class="">Đang hoạt động</span>
                    }
                    else
                    {
                        <span class="">Ngừng hoạt động</span>
                    }
                </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CinemaId">Edit</a> 
            </td>
        </tr>
}
    </tbody>
</table>
