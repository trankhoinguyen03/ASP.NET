@{
    ViewBag.Title = "rap gia ve";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

@model List<Movies>

<!-- Slideshow container -->
<div id="carouselExample" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        <!-- Slide 1 -->
        <div class="carousel-item active">
            <div class="d-flex justify-content-center">
                <img src="~/img/rap1.jpg" class="d-block w-100" alt="Cinema Interior">
            </div>
        </div>
        <div class="carousel-item active">
            <div class="d-flex justify-content-center">
                <img src="~/img/rap2.jpg" class="d-block w-100" alt="Cinema Interior">
            </div>
        </div>
        <div class="carousel-item active">
            <div class="d-flex justify-content-center">
                <img src="~/img/rap3.jpg" class="d-block w-100" alt="Cinema Interior">
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

<br />
<div class="container-giave mt-4">
    <div class="row justify-content-center">
        <!-- Phần bên trái: Giá Vé và Hình ảnh -->
        <div class="col-md-5">
            <h2 class="movie-title-dang-chieu text-center text-danger fw-bold mb-4">Giá Vé</h2>
            <img src="~/img/banggiave.png" alt="Cinema" class="w-100" style="max-width: 800px;">
        </div>

        <!-- Phần bên phải: Chọn Thành Phố và Rạp -->
        <div class="col-md-5">
            <h2 class="movie-title-dang-chieu text-center text-danger fw-bold mb-4">Chọn Thành Phố và Rạp</h2>

            <div class="d-flex flex-column justify-content-center align-items-center gap-4">
                <!-- Dropdown Thành Phố -->
                <div class="form-group mb-0 w-100">
                    <label for="citySelect" class="fw-bold">Thành Phố:</label>
                    <select id="citySelect" class="form-select" onchange="updateCinemas()">
                        <option value="">Chọn thành phố</option>
                        <option value="HCM">Hồ Chí Minh</option>
                        <option value="HN">Hà Nội</option>
                        <option value="DN">Đà Nẵng</option>
                    </select>
                </div>

                <!-- Dropdown Rạp -->
                <div class="form-group mb-0 w-100">
                    <label for="cinemaSelect" class="fw-bold">Rạp:</label>
                    <select id="cinemaSelect" class="form-select">
                        <option value="">Chọn rạp</option>
                    </select>
                </div>
            </div>
        </div>
    </div>
</div>










<style>
    .movie-title-dang-chieu {
        text-align: center !important;
        font-size: 2.5rem !important;
        font-weight: bold !important;
        color: var(--primary-color) !important;
    }

    .cinema-selection {
        display: flex;
        justify-content: center;
        align-items: center;
        text-align: center;
    }
</style>

<h2 class="movie-title-dang-chieu text-2xl font-bold mb-4">Phim Đang Chiếu</h2>

<section class="movies">
    <div class="mx-auto">
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 justify-center">
            @foreach (var item in Model)
            {
                <a href="@Url.Action("Detail","MoviesDetail", new{ Id = item.MovieId })">
                    <div class="movie-item text-center p-4 border rounded shadow">
                        <img src="~/img/@item.ImageUrl" alt="@item.Title" class="w-full h-auto mb-2">
                        <h3 class="movie-item-title text-lg font-semibold">@item.Title</h3>
                        <p>Thể loại: @item.Genre</p>
                    </div>
                </a>
            }
        </div>
    </div>
</section>

<!-- xu li chon tp -->
<script>
    function updateCinemas() {
        var city = document.getElementById("citySelect").value;
        var cinemaSelect = document.getElementById("cinemaSelect");

        // Clear old options
        cinemaSelect.innerHTML = '<option value="">Chọn rạp</option>';

        // Add cinema options based on the selected city
        if (city === "HCM") {
            cinemaSelect.innerHTML += '<option value="CGV">CGV Hồ Chí Minh</option>';
            cinemaSelect.innerHTML += '<option value="Lotte">Lotte Cinema Hồ Chí Minh</option>';
        } else if (city === "HN") {
            cinemaSelect.innerHTML += '<option value="CGV">CGV Hà Nội</option>';
            cinemaSelect.innerHTML += '<option value="Lotte">Lotte Cinema Hà Nội</option>';
        } else if (city === "DN") {
            cinemaSelect.innerHTML += '<option value="CGV">CGV Đà Nẵng</option>';
            cinemaSelect.innerHTML += '<option value="Lotte">Lotte Cinema Đà Nẵng</option>';
        }
    }
</script>
<!-- xu li slideshow-->
<script>
    let slideIndex = 1;
    showSlides(slideIndex);

    function plusSlides(n) {
      showSlides(slideIndex += n);
    }

    function currentSlide(n) {
      showSlides(slideIndex = n);
    }

    function showSlides(n) {
      let i;
      let slides = document.getElementsByClassName("mySlides");
      let dots = document.getElementsByClassName("dot");
      if (n > slides.length) {slideIndex = 1}
      if (n < 1) {slideIndex = slides.length}
      for (i = 0; i < slides.length; i++) {
        slides[i].style.display = "none";
      }
      for (i = 0; i < dots.length; i++) {
        dots[i].className = dots[i].className.replace(" active", "");
      }
      slides[slideIndex-1].style.display = "block";
      dots[slideIndex-1].className += " active";
    }
</script>
