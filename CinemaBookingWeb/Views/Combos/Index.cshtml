@{
    ViewData["Title"] = "Danh Sách Combo";
    Layout = "_LayoutAdmin";
}
@model IEnumerable<CinemaBookingWeb.Models.Combos>

<div>
    <h2>Danh Sách Combo</h2>
    <p>
        <a asp-action="Create" class="btn btn-primary">Thêm Combo Mới</a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>Tên</th>
                <th>Giá</th>
                <th>Hình Ảnh</th>
                <th>Trạng Thái</th>
                <th>Hành Động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var combo in Model)
            {
                <tr>
                    <td>@combo.Name</td>
                    <td>@combo.Price.ToString("C")</td>
                    <td>
                        <img src="@combo.ImageUrl" alt="@combo.Name" style="width: 100px;" />
                    </td>
                    <td>@(combo.Status == 1 ? "Kích Hoạt" : "Không Kích Hoạt")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@combo.ComboId" class="btn btn-warning">Sửa</a>
                        <a asp-action="Delete" asp-route-id="@combo.ComboId" class="btn btn-danger">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>