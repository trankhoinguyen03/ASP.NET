@{
    ViewData["Title"] = "ticket";
    Layout = "_LayoutHome";
}
@model tickets;
<style>
    /* Tổng quan */
    body {
        font-family: 'Arial', sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f8f9fa;
    }

    .ticket_active {
        display: flex;
        justify-content: center;
        padding: 40px;
        width: 100%;
        gap: 40px;
    }
    /* Thanh điều hướng */
    .ticket_nav-tabs {
        display: flex;
        justify-content: center;
        margin: 20px 0;
        list-style: none;
        padding: 0;
    }

        .ticket_nav-tabs li {
            margin: 0 15px;
            padding: 10px 20px;
            font-size: 1.2rem;
            font-weight: bold;
            color: #555;
            cursor: pointer;
        }

    .ticket_active-tab {
        border-bottom: 3px solid #0045a0;
        color: #0045a0;
    }

    /* Khu vực chọn combo */
    #combo-selection {
        display: flex;
        padding: 20px;
        flex-wrap: wrap;
    }

    /* Bảng chọn combo */
    .table {
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
        width: 100%;
    }

        .table thead {
            background-color: #ff7e00;
            color: #fff;
            font-weight: bold;
            font-size: 14px;
            text-align: center;
        }

        .table th, .table td {
            padding: 15px;
            vertical-align: middle;
        }

        .table img {
            width: 50px;
            height: 50px;
            border-radius: 4px;
        }

    .input-group {
        max-width: 120px;
        margin: auto;
    }

    .input-group-btn .btn {
        font-size: 14px;
        padding: 6px 10px;
    }

    .input-group input {
        font-size: 14px;
        text-align: center;
        border: 1px solid #ccc;
    }

    .ticket_left {
        padding: 20px;
        width: 60%;
        background-color: white;
        border-radius: 8px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }
    /* Sidebar */
    .ticket_sidebar {
        width: 30%;
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
        padding: 20px;
        margin-left: -20px; /* Đẩy thanh toán sang trái */
    }
    .movie-info {
        margin-bottom: 20px;
    }

    .ticket_card-header {
        background-color: #0045a0;
        color: #fff;
        font-size: 18px;
        text-align: center;
        padding: 10px;
        font-weight: bold;
        border-radius: 8px 8px 0 0;
    }

    .movie-info img {
        width: 120px;
        height: 160px;
        border-radius: 4px;
        margin-right: 10px;
    }

    .movie-info .ticket_movie-title {
        font-size: 16px;
        font-weight: bold;
        color: #333;
        margin-top: 10px;
    }

    /* Điều chỉnh title trong card */
    .ticket_movie-title {
        width: 100%;
        font-size: 16px;
        font-weight: bold;
        text-align: center;
        color: #ff7e00;
        border: none;
        outline: none;
        background-color: transparent;
        padding: 8px 0;
        box-sizing: border-box;
        white-space: normal;
        word-wrap: break-word;
        overflow: visible;
    }

    /* Movie Info Card */
    .movie-info.card {
        padding: 20px;
        box-sizing: border-box;
        overflow: hidden;
        text-align: center;
    }

    #myCinema3 p {
        font-size: 14px;
        margin: 5px 0;
    }

    #viewSeat p {
        font-size: 14px;
    }

    .ticket_price {
        color: #0045a0;
        font-weight: bold;
        font-size: 14px;
    }

    .ticket_total {
        font-size: 1.2rem;
        font-weight: bold;
        color: #000;
    }

    .ticket_action-buttons {
        display: flex;
        justify-content: space-between;
        gap: 10px;
        margin-top: 20px;
    }

    .btn-primary {
        background-color: #ff7e00;
        border-color: #ff7e00;
        color: white;
        font-size: 14px;
        padding: 10px 20px;
        width: 100%;
        text-align: center;
        border-radius: 4px;
        font-weight: bold;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #e66a00;
        }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
        color: white;
        font-size: 14px;
        padding: 10px 20px;
        text-align: center;
        border-radius: 4px;
        font-weight: bold;
        transition: background-color 0.3s ease;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }


    .ticket_total {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    /* Payment Section */
    .ticket_action-buttons {
        margin-top: 20px;
    }

        .ticket_action-buttons a,
        .ticket_action-buttons button {
            padding: 10px 20px;
            font-size: 16px;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

        .ticket_action-buttons a {
            background-color: #ccc;
            color: white;
            text-decoration: none;
        }

            .ticket_action-buttons a:hover {
                background-color: #888;
            }

        .ticket_action-buttons button {
            background-color: #0045a0;
            color: white;
            border: none;
        }


            .ticket_action-buttons button:hover {
                background-color: #0045a0;
                opacity: 0.9;
            }
    /* Nút "Quay lại" */
    .btn-custom-back {
        background-color: white;
        border: 2px solid #6c757d;
        color: #6c757d;
        font-size: 16px;
        padding: 10px 20px;
        text-align: center;
        border-radius: 4px;
        font-weight: bold;
        width: 48%;
        transition: all 0.3s ease;
    }

        .btn-custom-back:hover {
            background-color: #6c757d;
            color: white;
        }

    /* Nút "Tiếp tục" */
    .btn-custom-next {
        background-color: #0045a0;
        border: 2px solid #0045a0;
        color: white;
        font-size: 16px;
        padding: 10px 20px;
        text-align: center;
        border-radius: 4px;
        font-weight: bold;
        width: 48%;
        transition: all 0.3s ease;
    }

        .btn-custom-next:hover {
            background-color: #003480;
        }

    /* Hình ảnh combo sát lề trái */
    .combo-image {
        width: 50px;
        height: 50px;
        border-radius: 4px;
        margin-right: 10px; /* Khoảng cách giữa hình và chữ */
        float: left; /* Đưa hình sát lề trái */
    }

</style>
<body>
    <div style="display:flex; justify-content:center;">
        <ul class="ticket_nav-tabs">
            <li id="choose-movie">Chọn phim / Rạp / Suất</li>
            <li id="choose-seat">Chọn ghế</li>
            <li class="ticket_active-tab" id="choose-combo">Chọn thức ăn</li>
            <li id="choose-pay">Thanh toán</li>
        </ul>
    </div>

    @if (ViewBag.Nhan != null)
    {
        <h1>@ViewBag.Nhan;</h1>
    }

    <!--choice combo-->
    <div id="combo-selection" class=" ticket_active">
        <div class="ticket_left">
                <h2>Chọn thức ăn</h2>
                <table class="table table-striped table-borderless table-hover text-center mb-0">
                    <thead class="thead-dark">
                        <tr>
                            <th>Products</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            <th>Total</th>
                            <th>Remove</th>
                        </tr>
                    </thead>
                    <tbody class="align-middle">
                        <form id="formCombos" method="post" asp-action="ChoiceCombos" asp-controller="tickets">
                            @foreach (var combo in ViewBag.Combo)
                            {
                            <tr>
                                <td id="name @combo.ComboId" style="width:40%" class="align-middle">
                                    <img src="@combo.ImageUrl" alt="" class="combo-image">
                                        @combo.Name
                                </td>

                                <td style="width:15%" class="align-middle">
                                    <input style="background-color: transparent;" class="border-0 form-control text-center" disabled id='price @combo.ComboId' value="@combo.Price" />
                                </td>
                                <td style="width:15%" class="align-middle">
                                    <div class="input-group quantity mx-auto">
                                        <div class="input-group-btn btn-group">
                                            <button type="button" name="decrement" onclick="decrementQuantity(@combo.ComboId)" class="btn btn-outline-primary">-</button>
                                        </div>
                                        <input type="text" id='@combo.ComboId' name="quantities[@combo.ComboId]" min="0" class="text-center fw-bold bg-dark-subtle text-dark-emphasis form-control" value="0" readonly>
                                        <div class="input-group-btn">
                                            <button type="button" name="increment" onclick="incrementQuantity(@combo.ComboId)" class="btn btn-outline-primary">+</button>
                                        </div>
                                    </div>
                                </td>
                                <td style="width:20%" class="align-middle">
                                    <input style="background-color: transparent;" class="border-0 form-control text-center" disabled type="text" id="totalCombo @combo.ComboId" value="0" />
                                </td>
                                <td style="width:10%">
                                    <button type="button" class="btn btn-outline-danger" name="removeProduct" onclick="setvalueQuantity(@combo.ComboId)">X</button>
                                </td>
                            </tr>
                            }
                        </form>
                    </tbody>
                </table>
        </div>
        <div class="ticket_sidebar col-4">
            <div class="movie-info card">
                <div class="ticket_card-header text-center">
                    Thanh Toán
                </div>

                <div class="d-flex card-body">
                    <img width="100px" height="150px" id="myImage3" src="https://localhost:5001/@Model.movie.ImageUrl" alt="Movie Poster" class="me-3">
                    <input class="ticket_movie-title" id="myTitle3" value="@Model.movie.Title" readonly />
                </div>

                <div id="myCinema3" class="justify-content-between text-center">
                    <p>@Model.cinema.Name (@Model.cinema.Location) - @Model.showtime.Hall</p>
                    <p>Thời gian: @Model.showtime.StartTime.ToString("HH:mm") - @Model.showtime.StartTime.ToString("dd/MM/yyyy")</p>
                </div>

                <div id="viewSeat" class="text-center justify-content-between card-body">
                    @foreach (var choiceseat in Model.seats)
                    {
                        @foreach (var seat in ViewBag.Seats)
                        {
                            if (choiceseat.SeatId == seat.SeatId)
                            {
                                <div class="d-flex justify-content-between">
                                    <p>Số ghế:@seat.SeatNumber (Loại ghế:@seat.SeatType)</p>
                                    <p class="ticket_price">@choiceseat.Price VNĐ</p>
                                </div>
                                break;
                            }
                        }
                    }
                </div>

                <div id="ViewCombo" class="justify-content-between card-body">
                </div>
                <hr>

                <div class="d-flex justify-content-between card-body">
                    <p class="ticket_total">Tổng cộng</p>
                    @{
                        decimal temp;
                        if (Model.priceCombo != 0)
                        {
                            if (Model.totalPrice > Model.priceCombo)
                            {
                                temp = Model.totalPrice - Model.priceCombo;
                            }
                            else
                            {
                                temp = Model.totalPrice;
                            }
                        }
                        else
                        {
                            temp = Model.totalPrice;
                        }
                    }
                    <p class="ticket_total">
                        <input style="color: red; text-align: right; border: none; background: none;" id="totalPrice" type="text" value="@temp" disabled /> VNĐ
                    </p>
                </div>
            </div>

            <div class="ticket_action-buttons d-flex justify-content-between">
                <a type="button" class="btn btn-outline-secondary btn-custom-back" asp-action="choiceView" asp-controller="tickets" asp-route-id="2">Quay lại</a>
                <button type="submit" class="btn btn-custom-next" form="formCombos">Tiếp tục</button>
            </div>

        </div>
    </div>
</body>


<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script>
    function decrementQuantity(ComboId) {
        let quantityInput = document.getElementById(ComboId);
        let quantity = parseInt(quantityInput.value);

        if (quantity > 0) {
            quantity--;
            priceCombo(ComboId, quantity, -1);
            quantityInput.value = quantity;

        }
    }
    function incrementQuantity(ComboId) {
        let quantityInput = document.getElementById(ComboId);
        let quantity = parseInt(quantityInput.value);
        quantity++;
        priceCombo(ComboId, quantity, -2);
        quantityInput.value = quantity;


    }
    function setvalueQuantity(ComboId) {
        let quantityInput = document.getElementById(ComboId);
        priceCombo(ComboId, 0, quantityInput.value);
        quantityInput.value = 0;

    }
    function priceCombo(ComboId, quantity, static) {
        let valueInput = document.getElementById("price " + ComboId);
        let value = parseFloat(valueInput.value);
        let totalcombo = document.getElementById("totalCombo " + ComboId);
        let totalprice = parseFloat(document.getElementById("totalPrice").value);
        if (static == -1) {
            totalprice = totalprice - value;
        } else {
            if (static == -2) {
                totalprice = totalprice + value;
            } else {
                totalprice = totalprice - value * static;

            }
        }
        document.getElementById("totalPrice").value = totalprice;
        totalcombo.value = value * quantity;
        viewCombo(ComboId, quantity);
    }
    //hien thi combo
    function viewCombo(ComboId, quantity) {
        let totalcombo = document.getElementById("totalCombo " + ComboId);
        let namecombo = document.getElementById("name " + ComboId);
        const textnamecombo = namecombo.textContent.trim();
        let viewComboDiv = document.getElementById("viewCombo" + ComboId);
        if (quantity > 0) {
            if (viewComboDiv) {
                viewComboDiv.innerHTML = `<p>${quantity} x ${textnamecombo}</p>
                                                      <p class="ticket_price">${totalcombo.value} VNĐ</p>`;
            } else {
                let viewComboHTML = `<div id="viewCombo${ComboId}" class="d-flex justify-content-between">
                                                        <p>${quantity} x ${textnamecombo}</p>
                                                        <p class="ticket_price">${totalcombo.value} VNĐ</p>
                                                 </div>`;
                document.getElementById("ViewCombo").insertAdjacentHTML("beforeend", viewComboHTML);
            }
        } else if (viewComboDiv) {
            viewComboDiv.remove();
        }
    }
</script>