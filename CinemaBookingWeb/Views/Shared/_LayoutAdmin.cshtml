<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CinemaBookingWeb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CinemaBookingWeb.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="sidebar">
        <nav class="nav flex-column">
            <a class="navbar-brand mb-3 text-center" asp-area="" asp-controller="HomeAdmin" asp-action="Index">CinemaBookingWeb</a>

            <a class="nav-link text-light" data-bs-toggle="collapse" href="#overviewMenu" role="button" aria-expanded="false" aria-controls="overviewMenu">
                Tổng quan
                <span class="arrow-icon collapsed">&#10148;</span>
            </a>
            <div class="collapse" id="overviewMenu">
                <a class="nav-link text-light ps-5" asp-area="" asp-controller="Overview" asp-action="NewCustomers">Khách hàng mới</a>
                <a class="nav-link text-light ps-5" asp-area="" asp-controller="Overview" asp-action="TotalTickets">Số vé bán ra</a>
                <a class="nav-link text-light ps-5" asp-area="" asp-controller="Overview" asp-action="MoviesRevenue">Doanh thu phim</a>
                <a class="nav-link text-light ps-5" asp-area="" asp-controller="Overview" asp-action="CinemasRevenue">Doanh thu rạp</a>
                <a class="nav-link text-light ps-5" asp-area="" asp-controller="Overview" asp-action="DailyRevenue">Doanh thu ngày</a>
                <a class="nav-link text-light ps-5" asp-area="" asp-controller="Overview" asp-action="MonthlyRevenue">Doanh thu tháng</a>
            </div>

            <a class="nav-link text-light" data-bs-toggle="collapse" href="#movieManagementMenu" role="button" aria-expanded="false" aria-controls="movieManagementMenu">
                Quản lý phim
                <span class="arrow-icon collapsed">&#10148;</span>
            </a>
            <div class="collapse" id="movieManagementMenu">
                <a class="nav-link text-light ps-5" asp-area="" asp-controller="" asp-action="">Danh sách phim</a>
                <a class="nav-link text-light ps-5" asp-area="" asp-controller="" asp-action="">Thêm phim mới</a>
            </div>

            <a class="nav-link text-light" data-bs-toggle="collapse" href="#theaterManagementMenu" role="button" aria-expanded="false" aria-controls="theaterManagementMenu">
                Quản lý rạp chiếu
                <span class="arrow-icon collapsed">&#10148;</span>
            </a>
            <div class="collapse" id="theaterManagementMenu">
                <a class="nav-link text-light ps-5" asp-area="" asp-controller="" asp-action="">Danh sách rạp</a>
                <a class="nav-link text-light ps-5" asp-area="" asp-controller="" asp-action="">Thêm rạp mới</a>
            </div>

            <a class="nav-link text-light" data-bs-toggle="collapse" href="#showtimeManagementMenu" role="button" aria-expanded="false" aria-controls="showtimeManagementMenu">
                Quản lý suất chiếu
                <span class="arrow-icon collapsed">&#10148;</span>
            </a>
            <div class="collapse" id="showtimeManagementMenu">
                <a class="nav-link text-light ps-5" asp-area="" asp-controller="" asp-action="">Danh sách suất chiếu</a>
                <a class="nav-link text-light ps-5" asp-area="" asp-controller="" asp-action="">Thêm suất chiếu mới</a>
            </div>

            <a class="nav-link text-light" data-bs-toggle="collapse" href="#orderManagementMenu" role="button" aria-expanded="false" aria-controls="orderManagementMenu">
                Quản lý đơn hàng
                <span class="arrow-icon collapsed">&#10148;</span>
            </a>
            <div class="collapse" id="orderManagementMenu">
                <a class="nav-link text-light ps-5" asp-area="" asp-controller="" asp-action="">Danh sách đơn hàng</a>
            </div>

            <a class="nav-link text-light" data-bs-toggle="collapse" href="#comboManagementMenu" role="button" aria-expanded="false" aria-controls="comboManagementMenu">
                Quản lý combo
                <span class="arrow-icon collapsed">&#10148;</span>
            </a>
            <div class="collapse" id="comboManagementMenu">
                <a class="nav-link text-light ps-5" asp-area="" asp-controller="" asp-action="">Danh sách combo</a>
                <a class="nav-link text-light ps-5" asp-area="" asp-controller="" asp-action="">Thêm combo mới</a>
            </div>

            <a class="nav-link text-light" data-bs-toggle="collapse" href="#userManagementMenu" role="button" aria-expanded="false" aria-controls="userManagementMenu">
                Quản lý người dùng
                <span class="arrow-icon collapsed">&#10148;</span>
            </a>
            <div class="collapse" id="userManagementMenu">
                <a class="nav-link text-light ps-5" asp-area="" asp-controller="" asp-action="">Danh sách người dùng</a>
            </div>
        </nav>
    </div>

    <div class="main-content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    
    <footer class="footer text-muted">
        <div class="main-content">
            &copy; 2024 - CinemaBookingWeb - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        // Xử lý thay đổi trạng thái của mũi tên khi mục sổ ra hoặc đóng lại
        document.querySelectorAll('.nav-link[data-bs-toggle="collapse"]').forEach(link => {
            link.addEventListener('click', function () {
                const icon = this.querySelector('.arrow-icon');
                icon.classList.toggle('collapsed');
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
