<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CinemaBookingWeb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CinemaBookingWeb.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="sidebar">
        <nav class="nav flex-column">
            <a class="navbar-brand mb-3 text-center" href="~/Home">
                <img src="~/img/shortcut-logo.png" alt="Shark Cinemas Logo" height="100">
            </a>
            <a class="navbar-brand mb-3 text-center" asp-area="" asp-controller="HomeAdmin" asp-action="Index">Shark Cinema</a>

            <a class="nav-link text-light" data-bs-toggle="collapse" href="#overviewMenu" role="button" aria-expanded="false" aria-controls="overviewMenu">
                <i class="bi bi-bar-chart-fill"></i> Tổng quan
                <span class="arrow-icon collapsed">&#10148;</span>
            </a>
            <div class="collapse" id="overviewMenu">
                <a class="nav-link text-light ps-4" asp-area="" asp-controller="Overview" asp-action="NewUsers"><i class="bi bi-people-fill"></i> Khách hàng mới</a>
                <a class="nav-link text-light ps-4" asp-area="" asp-controller="Overview" asp-action="TotalTickets"><i class="bi bi-ticket-perforated-fill"></i> Số vé bán ra</a>
                <a class="nav-link text-light ps-4" asp-area="" asp-controller="Overview" asp-action="MoviesRevenue"><i class="bi bi-cash"></i> Doanh thu phim</a>
                <a class="nav-link text-light ps-4" asp-area="" asp-controller="Overview" asp-action="CinemasRevenue"><i class="bi bi-building"></i> Doanh thu rạp</a>
                <a class="nav-link text-light ps-4" asp-area="" asp-controller="Overview" asp-action="TotalRevenue"><i class="bi bi-graph-up"></i> Tổng doanh thu</a>
            </div>

            <a class="nav-link text-light" data-bs-toggle="collapse" href="#movieManagementMenu" role="button" aria-expanded="false" aria-controls="movieManagementMenu">
                <i class="bi bi-film"></i> Quản lý phim
                <span class="arrow-icon collapsed">&#10148;</span>
            </a>
            <div class="collapse" id="movieManagementMenu">
                <a class="nav-link text-light ps-4" asp-area="" asp-controller="" asp-action=""><i class="bi bi-list-ul"></i> Danh sách phim</a>
                <a class="nav-link text-light ps-4" asp-area="" asp-controller="" asp-action=""><i class="bi bi-plus-circle-fill"></i> Thêm phim mới</a>
            </div>

            <a class="nav-link text-light" data-bs-toggle="collapse" href="#theaterManagementMenu" role="button" aria-expanded="false" aria-controls="theaterManagementMenu">
                <i class="bi bi-geo-alt-fill"></i> Quản lý rạp chiếu
                <span class="arrow-icon collapsed">&#10148;</span>
            </a>
            <div class="collapse" id="theaterManagementMenu">
                <a class="nav-link text-light ps-4" asp-area="" asp-controller="" asp-action=""><i class="bi bi-list-ul"></i> Danh sách rạp</a>
                <a class="nav-link text-light ps-4" asp-area="" asp-controller="" asp-action=""><i class="bi bi-plus-circle-fill"></i> Thêm rạp mới</a>
            </div>

            <a class="nav-link text-light" data-bs-toggle="collapse" href="#showtimeManagementMenu" role="button" aria-expanded="false" aria-controls="showtimeManagementMenu">
                <i class="bi bi-clock-fill"></i> Quản lý suất chiếu
                <span class="arrow-icon collapsed">&#10148;</span>
            </a>
            <div class="collapse" id="showtimeManagementMenu">
                <a class="nav-link text-light ps-4" asp-area="" asp-controller="" asp-action=""><i class="bi bi-list-ul"></i> Danh sách suất chiếu</a>
                <a class="nav-link text-light ps-4" asp-area="" asp-controller="" asp-action=""><i class="bi bi-plus-circle-fill"></i> Thêm suất chiếu mới</a>
            </div>

            <a class="nav-link text-light" data-bs-toggle="collapse" href="#orderManagementMenu" role="button" aria-expanded="false" aria-controls="orderManagementMenu">
                <i class="bi bi-cart2"></i> Quản lý đơn hàng
                <span class="arrow-icon collapsed">&#10148;</span>
            </a>
            <div class="collapse" id="orderManagementMenu">
                <a class="nav-link text-light ps-4" asp-area="" asp-controller="" asp-action=""><i class="bi bi-list-ul"></i> Danh sách đơn hàng</a>
            </div>

            <a class="nav-link text-light" data-bs-toggle="collapse" href="#comboManagementMenu" role="button" aria-expanded="false" aria-controls="comboManagementMenu">
                <i class="bi bi-basket-fill"></i> Quản lý combo
                <span class="arrow-icon collapsed">&#10148;</span>
            </a>
            <div class="collapse" id="comboManagementMenu">
                <a class="nav-link text-light ps-4" asp-area="" asp-controller="" asp-action=""><i class="bi bi-list-ul"></i> Danh sách combo</a>
                <a class="nav-link text-light ps-4" asp-area="" asp-controller="" asp-action=""><i class="bi bi-plus-circle-fill"></i> Thêm combo mới</a>
            </div>

            <a class="nav-link text-light" data-bs-toggle="collapse" href="#userManagementMenu" role="button" aria-expanded="false" aria-controls="userManagementMenu">
                <i class="bi bi-person-fill"></i> Quản lý người dùng
                <span class="arrow-icon collapsed">&#10148;</span>
            </a>
            <div class="collapse" id="userManagementMenu">
                <a class="nav-link text-light ps-4" asp-area="" asp-controller="" asp-action=""><i class="bi bi-list-ul"></i> Danh sách người dùng</a>
            </div>
            <div style="height: 200px;"></div>
        </nav>
    </div>

    <div class="main-content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted">
        <div class="main-content">
            &copy; 2024 - SharkCinemaBookingWeb - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        // Xử lý thay đổi trạng thái của mũi tên khi mục sổ ra hoặc đóng lại
        document.querySelectorAll('.nav-link[data-bs-toggle="collapse"]').forEach(link => {
            link.addEventListener('click', function () {
                const icon = this.querySelector('.arrow-icon');
                icon.classList.toggle('collapsed');
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
