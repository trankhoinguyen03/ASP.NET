@model CinemaBookingWeb.Models.Showtimes

@{
    ViewData["Title"] = "Xóa Suất Chiếu";
    Layout = "_LayoutAdmin";
}

<h1>Xóa Suất Chiếu</h1>

<h3>Bạn có chắc chắn muốn xóa suất chiếu này?</h3>
<div>
    <h4>Phim: @Model.Movie.Title</h4>
    <p>Giá: @Model.Price.ToString("C")</p>
    <p>Thời gian bắt đầu: @Model.StartTime.ToString("yyyy-MM-dd HH:mm")</p>
    <p>Thời gian kết thúc: @Model.EndTime.ToString("yyyy-MM-dd HH:mm")</p>
    <p>Trạng thái: @(Model.Status == 1 ? "Kích Hoạt" : "Không Kích Hoạt")</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="ShowtimeId" />
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-action="Index" class="btn btn-secondary">Quay Lại</a>
</form>